# Postgres connection
# Prefer Vercel-style vars. At minimum set POSTGRES_URL (pooled). If using Prisma, also set POSTGRES_PRISMA_URL.
POSTGRES_URL="postgres://user:password@host:5432/db"
# Optional: non-pooled / Prisma URLs
POSTGRES_URL_NON_POOLING="postgres://user:password@host:5432/db"
POSTGRES_PRISMA_URL="postgres://user:password@host:5432/db?pgbouncer=true"

# Supabase REST access (RLS enabled)
SUPABASE_URL="https://YOUR_PROJECT_ID.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key"
# Optional: expose anon key only if you need client-side Supabase usage
SUPABASE_ANON_KEY="your_anon_key"

# Optional: used for server-side absolute fetches in development
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Map tiles
# Option A: direct style URL
NEXT_PUBLIC_MAP_STYLE_URL="https://demotiles.maplibre.org/style.json"
# Option B: MapTiler key (preferred for high-res vector tiles)
NEXT_PUBLIC_MAPTILER_KEY="YOUR_MAPTILER_KEY"

# Provider API keys
GOOGLE_POLLEN_API_KEY="your_google_pollen_api_key"
AMBEE_API_KEY="your_ambee_api_key" # optional

# Ingest protection token (for /api/ingest)
INGEST_TOKEN="set_a_long_random_string"

# Development: use mock responses instead of live provider calls
USE_MOCK_DATA="false"
