# Vercel Postgres connection (set in Vercel -> Project Settings -> Environment Variables)
DATABASE_URL="postgres://user:password@host:5432/db"

# Optional: used for server-side absolute fetches in development
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Map tiles
# Option A: direct style URL
NEXT_PUBLIC_MAP_STYLE_URL="https://demotiles.maplibre.org/style.json"
# Option B: MapTiler key (preferred for high-res vector tiles)
NEXT_PUBLIC_MAPTILER_KEY="YOUR_MAPTILER_KEY"

# Provider API keys
GOOGLE_API_KEY="your_google_api_key" # optional alias
GOOGLE_POLLEN_API_KEY="your_google_pollen_api_key" # preferred for pollen.googleapis.com
AMBEE_API_KEY="your_ambee_api_key"

# Ingest protection token (for /api/ingest)
INGEST_TOKEN="set_a_long_random_string"

# Optional if using cron auth header pattern
CRON_SECRET="set_a_long_random_string_for_cron"

# Development: use mock responses instead of live provider calls
USE_MOCK_DATA="true"
